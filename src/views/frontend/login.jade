extends ../layout
block metadescription
    title 用户登录
block stylesheet
    link(rel="stylesheet", href="./frontend/login.css")
block preloadscripts
block content
    .login-wrapper
        .login-container
            from(action="/login" method="post")
                .username
                    input(type="text" placeholder="用户名")
                .password
                    input(type="text" placeholder="密码")
                .others
                    input(type="checkbox" name="keepme")
                    a(href="/") 忘记密码
                .buttons
                    input(type="button" value="登录")
                    input(type="button" value="注册")
